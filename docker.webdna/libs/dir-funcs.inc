[Function name=rootPathFunc]
	[text]perm=/[/text]
	[IF ("[thisurl]"^"beta") | ("[thisurl]"^"gamma")]
		[THEN]
			[ListPath path=[thisurl]]
				[Showif [index]=1]
					[Showif [name]=beta]
						[text]perm=/beta/[/text]
					[/Showif]
					[Showif [name]=gamma]
						[text]perm=/gamma/[/text]
					[/Showif]
				[/Showif]
			[/ListPath]
		[/THEN]
	[/IF]
	[RETURN][perm][/RETURN]
[/Function]

[Function name=inBetaFunc]
	[text]perm=F[/text]
	[Showif [thisurl]^beta]
		[ListPath path=[thisurl]]
			[Showif [index]=1]
				[Showif [name]=beta]
					[text]perm=T[/text]
				[/Showif]
			[/Showif]
		[/ListPath]
	[/Showif]
	[RETURN][perm][/RETURN]
[/Function]