[Function name=J_GetRootDomain]
	[text]_fDom=[GETMIMEHeader name=HOST][/text]
	[text]_domSize=[COUNTWORDS delimiters=.][_fDom][/COUNTWORDS][/text]
	[text]_r=[/text]
	[ListWords words=[_fDom]&delimiters=.]
		[IF ("[index]"="[_domSize]") | ("[index]"="[MATH][_domSize]-1[/MATH]")]
			[THEN][text]_r=[_r][Hideif [_domSize]>[index]].[/Hideif][word][/text][/THEN]
		[/IF]
	[/ListWords]
	[Showif [_r]=][text]_r=[_fDom][/text][/Showif]
	[RETURN][_r][/RETURN]
[/Function]

[Function name=J_GetBaseDomain]
	[text]_fDom=[GETMIMEHeader name=HOST][/text]
	[text]_domSize=[COUNTWORDS delimiters=.][_fDom][/COUNTWORDS][/text]
	[text]_r=[/text]
	[Showif [_domSize]>2]
		[ListWords words=[_fDom]&delimiters=.]
			[Hideif [index]=1]
				[text]_r=[_r][Hideif [index]=2].[/Hideif][word][/text]	
			[/Hideif]
		[/ListWords]
	[/Showif]
	[Showif [_r]=][text]_r=[_fDom][/text][/Showif]
	[RETURN][_r][/RETURN]
[/Function]

[Function name=J_GetFullDomain]
	[RETURN][GETMIMEHeader name=HOST][/RETURN]
[/Function]