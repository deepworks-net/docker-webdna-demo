[include file=[j_includesDir]/domain-funcs.inc]

[!] GET THE ROOT DOMAIN [/!]
[!] IE 'fbaonline.org' [/!]
[text]rootDomain=[J_GetRootDomain][/text]

[!] GET THE BASE DOMAIN [/!]
[!] IE 'sandbox.fbaonline.org' [/!]
[text]baseDomain=[J_GetBaseDomain][/text]

[!] GET THE FULL DOMAIN [/!]
[!] IE 'ocb.sandbox.fbaonline.org' [/!]
[text]fullDomain=[J_GetFullDomain][/text]

[!] THIS SHOULD ALWAYS WORK? [/!]
[IF ("[fullDomain]"^"www.") | ("[fullDomain]"="[rootDomain]")]
	[THEN]	
		[text]baseDomain=www.[rootDomain][/text]
		[text]fullDomain=www.[rootDomain][/text]
	[/THEN]
[/IF]

[text]domainVar=[rootDomain][/text]

[!] MOVE TO FUNCTION FILE! [/!]
[Function name=g_AssetLocation]
	[IF ("[useCDN]"="1")]
		[THEN][RETURN][g_cdn][/RETURN][/THEN]
		[ELSE][RETURN][g_assetsDir][/RETURN][/ELSE]
	[/IF]
[/Function] 

